<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/putih"
        card_view:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        card_view:titleTextColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_below="@id/card_view"
            android:id="@+id/card_calendar"
            android:backgroundTint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="20dp">

                <CalendarView
                    android:id="@+id/calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_below="@id/card_view"
            android:id="@+id/card_view_2"
            android:backgroundTint="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="1dp"
                android:elevation="5dp">

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/emot"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:fontFamily="@font/myfont"
                    android:textColor="#6A6A6A"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text=":)"/>
                <TextView
                    android:id="@+id/nilai"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:fontFamily="@font/myfont"
                    android:textColor="#6A6A6A"
                    android:layout_alignParentBottom="false"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/emot"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Bagus"/>
                <TextView
                    android:id="@+id/keterangan_nilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anda telah berdzikir dengan lengkap"
                    android:layout_below="@id/nilai"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/myfont"
                    android:textSize="20dp"
                    android:layout_toEndOf="@id/emot"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="viewStart"
                    android:layout_marginBottom="10dp"
                    android:gravity="center" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_below="@id/card_view"
        android:id="@+id/card_penyelesaian"
        android:backgroundTint="#FFFFFF"
        android:layout_width="155dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/total_penyelesaian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:elevation="5dp">

            <TextView
                android:id="@+id/number_penyelesaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:fontFamily="@font/myfont"
                android:textColor="#6A6A6A"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="1/5"/>
            <TextView
                android:id="@+id/keterangan_penyelesaian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat penyelesaian"
                android:fontFamily="@font/myfont"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/number_penyelesaian"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/card_view"
        android:id="@+id/card_persentasi"
        android:backgroundTint="#FFFFFF"
        android:layout_width="155dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/persentasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:elevation="5dp">

            <TextView
                android:id="@+id/number_persentasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:fontFamily="@font/myfont"
                android:textColor="#6A6A6A"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="20%"/>
            <TextView
                android:id="@+id/keterangan_persentasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persentase penyelesaian"
                android:fontFamily="@font/myfont"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/number_persentasi"
                 />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>