<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/start</item>
<!--        <item name="colorPrimaryDark">#2196F3</item>-->
        <item name="colorPrimaryDark">@color/putih</item>
        <item name="colorAccent">@color/floatingColor</item>
<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/end</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAlert" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/myfont</item>
